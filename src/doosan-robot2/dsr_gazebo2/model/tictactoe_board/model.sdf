<?xml version="1.0" ?>
<sdf version="1.6">
  <model name="tictactoe_board">
    <!-- Keep same position, just smaller board -->
    <pose>0.45 0.0 0.75 0 0 0</pose>
    <static>true</static>

    <!-- Board base -->
    <link name="board_base">
      <pose>0 0 0 0 0 0</pose>

      <collision name="collision">
        <geometry>
          <box>
            <size>0.48 0.48 0.016</size> <!-- Reduced from 0.6 to 0.48 -->
          </box>
        </geometry>
      </collision>

      <visual name="board_visual">
        <geometry>
          <box>
            <size>0.48 0.48 0.016</size> <!-- Reduced -->
          </box>
        </geometry>
        <material>
          <ambient>0.3 0.3 0.3 1</ambient>
          <diffuse>0.4 0.4 0.4 1</diffuse>
          <specular>0.1 0.1 0.1 1</specular>
        </material>
        <pose>0 0 0.008 0 0 0</pose>
      </visual>
    </link>

    <!-- Grid lines - adjusted for smaller board -->
    <!-- Vertical lines -->
    <link name="vline1">
      <pose>-0.08 0 0.018 0 0 0</pose> <!-- -0.1 → -0.08 -->
